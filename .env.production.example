# Production environment variables
# Copy this to Vercel → Project Settings → Environment Variables → Production

# Next Auth
# Generate with: npx auth secret
AUTH_SECRET=""

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Supabase Production Database
# Use the Transaction pooler URL (port 6543) for serverless
DATABASE_URL="postgres://postgres.<ref>:[YOUR-PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=5"

# Note: You don't need DIRECT_URL in production Vercel
# Only migrations need direct connections, and those typically run in CI/CD

POSTMARK_API_TOKEN=""
POSTMARK_SERVER_TOKEN=""
POSTMARK_FROM_EMAIL=""
POSTMARK_WEBHOOK_USER=""
POSTMARK_WEBHOOK_PASSWORD=""